/**index.wxss**/
.menu {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 32px;
  background: #f6f5f3;
}
scroll-view {
  display: block;
  width: 100%;
}

.tabnavs {
  height: 32px;
  white-space: nowrap;
}

.tabnav {
  font-size: 13px;
  line-height: 32px;
  margin: 0px 10px;
  display: inherit;
}

.news {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-flow: column;
  margin-top: -120rpx;
}

.new {
  width: 96%;
  height: 300rpx;
  margin: 5rpx auto;
  border-bottom: 1px solid silver;
}

.new_title {
  width: 36%;
  height: 240rpx;
  margin: auto 3rpx;
  float: left;
  font-weight: blod;
}

.img {
  width: 60%;
  height: 240rpx;
  display: block;
  float: right;
  border: 1px saddlebrown solid;
}

.title {
  font-size:14px;  
}

.new_other {
  clear: both;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx; 
}

.author {
  font-size:12px;
  color: #666;
}